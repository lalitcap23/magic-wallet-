{
  "name": "magic-wallet-sdk",
  "version": "1.0.0",
  "description": "One-click wallets for Stacks blockchain - instant onboarding with upgrade paths to permanent wallets",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "DAPP_INTEGRATION_GUIDE.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "node test-one-click.mjs && node test-sdk.mjs",
    "test:auto-connect": "node test-auto-connect.mjs",
    "test:validation": "node test-final-validation.mjs",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "stacks",
    "bitcoin",
    "wallet",
    "sdk",
    "blockchain",
    "onboarding",
    "web3",
    "one-click",
    "temporary-wallet",
    "burner-wallet",
    "dapp-integration",
    "crypto",
    "testnet",
    "faucet",
    "instant-wallet",
    "magic-wallet"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lalitcap23/magic-wallet-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/lalitcap23/magic-wallet-sdk/issues"
  },
  "homepage": "https://github.com/lalitcap23/magic-wallet-sdk#readme",
  "author": "Lalit Kumar <your-email@example.com>",
  "license": "MIT",
  "dependencies": {
    "@stacks/connect": "^7.5.0",
    "@stacks/network": "^6.13.0",
    "@stacks/transactions": "^6.13.0",
    "@stacks/wallet-sdk": "^6.13.0",
    "@stacks/encryption": "^6.13.0",
    "@stacks/storage": "^6.13.0",
    "jspdf": "^2.5.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/qrcode": "^1.5.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}